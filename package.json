{
  "name": "chrome-extension-boilerplate-react-js",
  "version": "1.0.0",
  "description": "Chrome Extension: Javascript + TailwindCSS + ReactJS",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "webpack --config webpack.prod.js",
    "postbuild": "zip -r dist/output.zip dist/*",
    "start": "webpack -w --config webpack.dev.js",
    "ndev": "rm -rf build && webpack --config webpack.dev.js"
  },
